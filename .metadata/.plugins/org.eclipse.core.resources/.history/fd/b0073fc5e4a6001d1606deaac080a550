package org.oop.mytype;

import java.util.Scanner;

class MyType<Boolean, T extends Number> {
	Boolean typeData;
	T value;
}

public class MainMyType {

	private static Scanner scanner = new Scanner(System.in);
	private static char ch;
	public static final char[] MAS_CHAR = { '+', '-', '/', '*' };

	public static void main(String[] args) {
		MyType x = getVariable();
		MyType y = getVariable();
		System.out.println();
	}

	private static MyType getVariable() {
		if (scanner.hasNextDouble())
			MyType<Boolean, Double> t = new MyType<>();
			return scanner.n;
		if (scanner.hasNextLong())
			return scanner.nextLong();
		System.out.println("Error: You entered to variable! Value variable is not possible!");
		return getVariable();
	}

}
