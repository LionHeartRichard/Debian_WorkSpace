package org.oop.mytype;

import java.util.Scanner;

class MyNumber<T extends Number> {
	protected T x, y;

	protected void getResult(T x, T y, char operation) {
		System.out.println("RESULT:" + x + operation + y);
	}
}

public class MainMyType {

	private static Scanner scanner = new Scanner(System.in);
	private static char ch;
	private static MyNumber number =  new MyNumber();
	public static final char[] MAS_CHAR = { '+', '-', '/', '*' };

	public static void main(String[] args) {
		number.x = getVariable();
		number.y = getVariable();
		ch = checkOperation();
		number.getResult(number.x, number.y, ch);
	}

	private static char checkOperation() {
		for (char operation : MAS_CHAR) {
			if (scanner.hasNext()) {
				if (operation == scanner.next().charAt(0)) {
					return operation;
				}
			}
		}
		System.out.println("ERROR: invalide operation!!!");
		return checkOperation();
	}

	private static Number getVariable() {
		if (scanner.hasNextDouble())
			return scanner.nextDouble();
		if (scanner.hasNextLong())
			return scanner.nextLong();
		System.out.println("You entered is not possible value!!!");
		return getVariable();
	}

}
