package org.oop.mytype;

import java.util.Scanner;

class MyNumber<T extends Number> {
	protected T x,y;
	protected T getRezult() {
		return this.x;
	}
}

class MyBlockBool{
	protected boolean checkEnter = false;
	protected boolean checkDouble = false;
	protected boolean checkLong = false;
	protected boolean[] masBool = new boolean[3];
	
}

public class MainMyType {
	
	private static Scanner scanner = new Scanner(System.in);
	private static char ch;
	private static MyNumber number;
	public static final char[] MAS_CHAR = {'+', '-', '/', '*'};
		
	public static void main(String[] args) {
		number.x = getVariable();
		number.y = getVariable();
	}

	private static Number getVariable() {
		if (scanner.hasNextDouble())
			return scanner.nextDouble();
		if (scanner.hasNextLong())
			return scanner.nextLong();
		System.out.println("You entered is not possible value!!!");
		return getVariable();
	}

}




